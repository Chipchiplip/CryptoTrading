    "ConnectionString": "localhost:6379"
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-password",
    "FromEmail": "noreply@cryptotrading.com",
    "FromName": "CryptoTrading"
  },
  "RateLimit": {
